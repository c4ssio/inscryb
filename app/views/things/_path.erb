  <%=select('thing','id', parent_nodes,{},{:onchange=>"$(this).up('form').submit()"} ) if parent_nodes.last
  #clicking on form items or clicking Go submits and loads item
  %>
  <%=submit_tag("Go") if parent_nodes.last%>
<%end-%>