<xml id="xml_wrapper" style="display:none">
  <%= render :partial=>'xml' %>
</xml>
<!--user layer-->
<div class="user_wrapper" id="user_wrapper">
  <%=render :file=>'users/login'%>
</div>
<!--search layer-->
<form onsubmit="search(this);return false;" action="#">
  <div class="search">
    <p><span>Search</span>
      <%= image_tag 'spinner.gif', :id=>'spinner', :style=>"display:none; float:right;"%>
      <%=text_field(:thing,:search, :size=>10)-%>
      <%=submit_tag('Go')%>
    </p>
  </div>
</form>
<!-- path layer -->
<div class="target_group" id="thing_header_wrapper">
  <%=render :partial=>'thing_header'%>
</div>
  <div class="actions" id="actions_wrapper">
    <%=render :partial=>'actions' unless (session[:user].id==1)-%>
  </div>
<div id="child_loading_wrapper" style="display:none">
  <img src="images/spinner.gif">
</div>
<div id="child_and_tag_wrapper">
  <%=render :file=>'things/refresh'%>
</div>